extends base.pug

block content
    h4 Change Title Video
    form(method="POST")
        input(name="title", placeholder="video title",value=video.title,required)
        input(name="description", placeholder="Description",value=video.description, type="text", minLength=20)
        input(name="hashtags", placeholder="Hashtags, separated by comma",value=video.hashtags.join(), type="text")
        input(value="Save", type="submit")